<script>
    $(document).ready(function () {
        let branch;

        $('#clean').click(function () {
            $('form').trigger('reset');
        });

        $('#refresh').click(function () {
            $('#captcha').val('');
        });

        $('form').submit(function (e) {
            e.preventDefault();

            @* $('.modal').modal('show');
            $('.modal-title').html('<i class="fas fa-exclamation-triangle text-warning pr-2"></i>已額滿');
            $('.modal-body').html('<p class="m-0">預約已額滿，謝謝。</p>');
            return; *@

            let idLength = $('#Id').val().length;
            if (idLength < 8) {
                $('.modal').modal('show');
                $('.modal-title').html('<i class="fas fa-exclamation-triangle text-warning pr-2"></i>格式錯誤');
                $('.modal-body').html('<p class="m-0">身分證字號長度需大於8碼</p>');
                return;
            }

            let brLength = $('#Birthday').val().length;
            if (brLength !== 8) {
                $('.modal').modal('show');
                $('.modal-title').html('<i class="fas fa-exclamation-triangle text-warning pr-2"></i>格式錯誤');
                $('.modal-body').html('<p class="m-0">西元生日格式需為8碼</p>');
                return;
            }

            const answer1 = $('#Answer').val();
            const answer2 = '@ViewBag.Answer';
            if (answer1 !== answer2) {
                $('.modal').modal('show');
                $('.modal-title').html('<i class="fas fa-exclamation-triangle text-warning pr-2"></i>安全確認碼');
                $('.modal-body').html('<p class="m-0">安全確認碼錯誤</p>');
                return;
            }

            Covid19Add.submit();
 
        });
    });
</script>

